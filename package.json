{
  "name": "wikilear",
  "version": "0.0.1",
  "description": "The Wikilear web site",
  "main": "main.js",
  "scripts": {
    "start": "npm run clean && npm run css-watch & npm run js-watch & npm run eleventy-watch",
    "build": "npm run clean && npm run css-build && npm run js-build && npm run eleventy",
    "clean": "set -e && find ./dist -mindepth 1 ! -regex '^./dist/images\\(/.*\\)?' -delete || echo dist not found",
    "eleventy": "NODE_ICU_DATA='./node_modules/full-icu' NODE_ENV=production npx @11ty/eleventy",
    "eleventy-watch": "NODE_ICU_DATA='./node_modules/full-icu' npx @11ty/eleventy --serve",
    "js-watch": "npx rollup -c -w",
    "js-build": "NODE_ENV=production npx rollup -c",
    "css-build": "NODE_ENV=production npm run tailwindcss",
    "css-watch": "watch \"npm run tailwindcss\" \"src/css\"",
    "tailwindcss": "npx tailwindcss build src/css/styles.css -o dist/css/styles.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Andrea Leardini",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@saschazar/wasm-avif": "^1.0.0",
    "@types/luxon": "^1.25.0",
    "autoprefixer": "^10.0.2",
    "clean-css": "^4.2.3",
    "datauri": "^3.0.0",
    "full-icu": "^1.3.1",
    "image-size": "^0.9.3",
    "luxon": "^1.25.0",
    "markdown-it-anchor": "^6.0.1",
    "markdown-it-attrs": "^3.0.3",
    "normalize.css": "^8.0.1",
    "postcss": "^8.1.8",
    "rollup": "^2.33.3",
    "rollup-plugin-terser": "^7.0.2",
    "sharp": "^0.26.3",
    "tailwindcss": "^2.0.1",
    "watch": "^1.0.2"
  }
}
