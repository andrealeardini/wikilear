<div id="post-list">
  <div>
    {% if postListHeadline %}
    <h2>
      {{ postListHeadline }}
    </h2>
    {% endif %}
    <div>
      <ul>
      {% for item in postListItems %}
      <li class="mt-4 p-4 shadow-lg border border-gray-300 rounded-lg">
        <a href="{{ item.url }}" class="font-semibold hover:underline dm:text-yellow-400">{{ item.data.title }}</a>
        <p class="text-sm xl:text-base font-semibold text-gray-700 dm:text-yellow-300" {% if item.data.date %}<time datetime="{{ item.data.date | w3DateFilter }}">{{ item.data.date | dateFilter }}</time>{% endif %}</p>
        <p class="mt-0">{{ item.data.subtitle }}</p>
        {% if item.data.image %}
        <img
          src="{{ item.data.image }}"
          {% if image-description %}
          alt="{{ item.data.image-description }}"
          {% else %}
          alt=""
          {% endif %}
          {% if image-title %}
          title="{{ item.data.image-title }}"
          {% endif %}
          class="mt-4"
        />
        {% endif %}
        {% set tags = item.data.tags %}
        {% include 'components/tags-post.njk' %}
      </li>
      {%- endfor -%}
    </ul>
    </div>
  </div>
</div>
