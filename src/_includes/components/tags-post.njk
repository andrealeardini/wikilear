{% if tags %}
<ul class="flex flex-wrap">
  {% for tag in tags %}
  <li class="mt-4 mr-4 ">
    <a
      href="/tag/{{ tag | slug }}/"
      class="px-2 py-1 text-sm border rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:text-gray-700"
      >{{ tag | title }}</a
    >
  </li>
  {% endfor %}
</ul>
{% endif %}
