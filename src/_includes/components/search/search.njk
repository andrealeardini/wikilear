<form action="https://www.google.com/search" method="get" class="p-4 border rounded-lg shadow-lg">
  <label for="search" class="font-semibold">Cosa vuoi cercare?</label>
  <div class="flex flex-wrap w-full mt-4 p-4 rounded-md dark:bg-gray-700">
    <span class="mr-2 p-2 dark:text-gray-100">site:wikilear.it</span>
    <input type="hidden" id="site" name="q" value="site:wikilear.it">
    <input type="search" id="search" name="q" value=""
      class="flex-auto w-auto p-2 bg-gray-200 dark:bg-gray-300 dark:text-gray-900">
  </div>
  <button id="searchBtn" type="submit"
    class="text-gray-100 block mt-4 mr-4 right-0 ml-auto p-4 font-semibold border rounded-lg bg-blue-600">Cerca su
    Google</button>
</form>