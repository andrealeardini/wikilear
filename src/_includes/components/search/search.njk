<form action="https://www.google.com/search" method="get" class="p-4 border rounded-lg shadow-lg">
  <label for="search" class="font-semibold">Cosa vuoi cercare?</label>
  <div class="flex flex-wrap w-full mt-4 p-4 rounded-md bg-gray-200 dark:bg-gray-700">
    <span class="mr-2 dark:text-gray-100 flex-grow-0">site:wikilear.it</span>
    <input type="hidden" id="site" name="q" value="site:wikilear.it">
    <input type="search" name="q" id="q" value="" class="flex-grow w-auto px-2 dark:text-gray-900">
  </div>
  <button id="searchBtn" type="submit" class="text-gray-100 block mt-4 right-0 ml-auto p-4 font-semibold border rounded-lg bg-blue-600">Cerca su Google</button>
</form>