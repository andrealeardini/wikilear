<div class="flex flex-wrap justify-around mt-6 gap-4">
  {% for card in cards %}
  <div
    class="border-gray-600 dark:bg-gray-300 border rounded-lg shadow-lg flex flex-wrap flex-row w-5/12 mb-6 h-auto"
  >
    <div
      class="h-8 md:h-12 mt-0 pl-2 rounded-t-lg bg-gray-800 text-white w-full flex items-center"
    >
      <a href="{{ card.url | url }}" class="text-gray-100 dark:text-gray-100">{{
        card.title | safe
      }}</a>
    </div>
    <div class="px-2 py-4 sm:p-4">
      <a href="{{ card.url | url }}">
        <img src="{{ card.imageUrl | url }}" alt="{{ card.imageAlt | safe }}" />
      </a>
    </div>
  </div>
  {% endfor %}
</div>
