<ul class="flex flex-wrap justify-around gap-y-4 gap-x-12 sm:gap-x-20 my-8 p-4">
  {% for card in cards | sort(attribute="title") %}
  <li class="w-20 font-semibold text-gray-700 dark:text-gray-100 text-sm md:text-base">
    <a href="{{ card.url | url }}">
      <div class="h-full flex flex-col">
        <img class="{% if card.title =="Eleventy" %}w-auto h-20 p-1 mt-0 mb-1 rounded-lg bg-gray-900{% else %}h-20{% endif %}" src="{{ card.imageUrl | url }}" alt aria-label="Vai alla sezione dedicata a {{ card.title | safe }}"/>
        <p>{{ card.title | safe }}</p>
      </div>
    </a>
  </li>
  {% endfor %}
</ul>