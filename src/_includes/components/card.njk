<div class="flex flex-wrap justify-around mt-6 gap-4">
  {% for card in cards %}
  <div
    class="border-gray-600 border rounded-lg shadow-lg flex flex-wrap flex-row w-5/12 mb-6 h-auto"
  >
    <div
      class="h-8 md:h-12 mt-0 pl-2 rounded-t-lg bg-gray-800 text-white w-full flex items-center"
    >
      <h2 class="dm:text-yellow-400">
        <a href="{{ card.url | url }}">{{ card.title | safe }}</a>
      </h2>
    </div>
    <div class="px-2 py-4 sm:p-4">
      <a href="{{ card.url | url }}">
        <img src="{{ card.imageUrl | url }}" alt="{{ card.imageAlt | safe }}" />
      </a>
    </div>
  </div>
  {% endfor %}
</div>
