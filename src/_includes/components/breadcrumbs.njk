{% if eleventyNavigation and eleventyNavigation.key and
eleventyNavigation.parent %}
<nav class="text-sm dm:text-yellow-300" aria-labelledby="breadcrumb">
  <h2 class="sr-only" id="breadcrumb">Breadcrumbs:</h2>
  {% set navPages = collections.all |
  eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
  <ul class="my-4">
    {%- for entry in navPages %}
    <li class="inline">
      <a href="{{ entry.url | url }}" class="hover:underline">{{ entry.title }}</a>{% if not loop.last or eleventyNavigation.showLast %} >{% endif %}
    </li>
    {%- endfor -%}
    {% if eleventyNavigation.showLast %}
    <li class="inline font-light text-gray-700 dm:text-yellow-200">
      {{ eleventyNavigation.title or eleventyNavigation.key }}
    </li>
    {% endif %}
  </ul>
</nav>
{% endif %}
