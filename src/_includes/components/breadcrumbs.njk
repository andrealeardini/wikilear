{% if eleventyNavigation and eleventyNavigation.key and
eleventyNavigation.parent and eleventyNavigation.parent != "Home" %}
<nav class="text-sm font-semibold text-blue-700 dark:text-yellow-300" aria-labelledby="breadcrumb">
  <h2 class="sr-only" id="breadcrumb">Breadcrumbs:</h2>
  {% set navPages = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
  <ul class="leading-8 inline-block w-full">
    {%- for entry in navPages -%}
    {%- if not loop.first -%}
    <li class="inline-block"><a href="{{ entry.url | url }}" aria-label="Sezione {{entry.title | trim }}">{{entry.title | trim }}</a>{%- if not loop.last or eleventyNavigation.showLast -%}<span class="mx-2" aria-hidden="true">></span>{%- endif -%}</li>
    {%- endif -%}
    {%- endfor -%}
    {%- if eleventyNavigation.showLast -%}
    <li class="inline-block leading-snug font-light text-gray-700 dark:text-yellow-200">{{ eleventyNavigation.title or eleventyNavigation.key | trim }}</li>
    {%- endif -%}
  </ul>
</nav>
{% endif %}
